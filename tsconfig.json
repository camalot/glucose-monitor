{
  "compilerOptions": {
    "allowJs": true, // Allow JavaScript files
    "checkJs": false, // Disable type-checking for JavaScript files
    "outDir": "src/dist", // Output directory for compiled files
    "module": "commonjs", // Module system for Node.js
    "target": "es6", // Target ECMAScript version
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ], // Include both .ts and .js files
  "exclude": [
    "src/node_modules",
    "src/**/*.ts.ignore",
    "src/**/*.js.ignore",
    "src/**/*.spec.ts",
    "src/dist/**/*"
  ]
}