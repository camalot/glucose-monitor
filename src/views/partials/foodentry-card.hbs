<div class="position-relative h-100">
  <!-- Add Food Entry Button -->
  <button type="button" 
    class="btn-card-top-right btn btn-secondary btn-sm rounded-circle position-absolute top-0 end-0 m-2" 
    data-bs-toggle="modal" data-bs-target="#addFoodModal" title="Add Food Entry">
    <i class="fa-solid fa-plus"></i>
  </button>
  <div class="food reading-entry card bg-dark mb-3 placeholder-glow overflow-y-auto p-0 h-100" aria-hidden="true" data-timeframe="timeframeRate">

    <div class="card-body pt-1 pb-0 h-100">
      <h5 class="card-title placeholder reading-entry-label object-fit-fill p-0 m-0 text-uppercase placeholder-field">Meals</h5>
      <div class="card-text">
        <ul class="food-list list-group list-group-flush reading-entry-body p-0 m-0">
          <li class="list-group-item placeholder-field">No food entries available.</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="d-none" data-type="template">
    <li class="list-group-item p-0 m-0 placeholder-field" data-template="foodEntryItem">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="text-start">
              <i class="fa-solid fa-bowl-food me-2"></i>
              <span class="label h5" data-bind="name"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="d-inline">
              <span class="label">Calories:</span>
              <div class="badge">
                <span class="value" data-bind="calories"></span>
                <span class="unit">kcal</span>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="d-inline">
              <span class="label">Carbs:</span>
              <div class="badge">
                <span class="value" data-bind="carbohydrates"></span>
                <span class="unit">g</span>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="xfood-item-time" data-bind="time"></div>
          </div>
        </div>
      </div>
    </li>
  </div>
</div>