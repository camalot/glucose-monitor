 <!-- Modal for Adding Meal Information -->
<div class="modal fade" id="addMealModal" tabindex="-1" aria-labelledby="addMealModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addMealModalLabel">Add Meal Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="mealTime" class="form-label">Meal Time</label>
            <input type="datetime-local" class="form-control" id="mealTime" name="mealTime" required>
            <div class="invalid-feedback">
              Please provide a valid meal time.
            </div>
          </div>
          <div class="mb-3">
            <label for="mealCalorie" class="form-label">Calorie Count</label>
            <input type="number" class="form-control" id="mealCalorie" name="calories" required />
            <div class="invalid-feedback">
              Please provide a valid calorie count.
            </div>
          </div>
          <div class="mb-3">
            <label for="mealDescription" class="form-label">Meal Description</label>
            <textarea class="form-control" id="mealDescription" name="mealDescription" rows="3" required></textarea>
            <div class="invalid-feedback">
              Please provide a description of the meal.
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>