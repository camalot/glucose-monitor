

        <div class="inner cover">

          <div class="row">
            <div class="col"></div>
            <div class="col" data-role="search-container">
              {{> searchbar fieldId="search" placeholder="Food Search..." resultTemplate="foodItem" name="search" }}
            </div>
            <div class="col"></div>
          </div>

          <div class="xcontainer">
            <div class="row">
              <div class="col-lg-8">
                <div class="xcontainer">
                  <div class="row">
                    <div class="col-lg-3">
                      {{> base-card title="HbA1c" cardClass="a1c" tooltip="Calculated in real time off the selected time frame." }}
                    </div>
                    <div class="col-lg-3">
                      <div class="position-relative">
                        <button type="button" 
                          class="btn-card-top-right btn btn-secondary btn-sm rounded-circle position-absolute top-0 end-0 m-2" 
                          data-bs-toggle="modal" data-bs-target="#addReadingModal" title="Add Glucose Entry">
                          <i class="fa-solid fa-plus"></i>
                        </button>
                        {{> base-card title="Glucose" cardClass="glucose" tooltip="Current glucose level." }}
                      </div>
                      {{!-- {{> glucose-card }} --}}
                    </div>
                    <div class="col-lg-3">
                      {{> base-card title="Carbs" cardClass="carbs" tooltip="Data represented is for today." }}
                      {{!-- {{> carbs-card }} --}}
                    </div>
                    <div class="col-lg-3">
                      {{> base-card title="Calories" cardClass="calories" tooltip="Data represented is for today." }}
                      {{!-- {{> calories-card }} --}}
                    </div>

                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      {{> glucose-chart }}
                    </div>
                    <div class="col-lg-6">
                      {{> weight-chart }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="xcontainer h-100">
                  <div class="row h-100">
                    <div class="col-lg-12">
                      {{> foodentry-card }}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

        {{> menu-button }}

        {{!-- include the partial --}}
        {{> glucose-dialog }}
        {{> food-dialog }}
        {{> weight-dialog }}

        {{> value-card-template }}
        {{> food-suggestion-template }}
        {{> food-item-template }}

        {{#section "head"}}
        <script src="https://cdn.jsdelivr.net/npm/chart.js?path=dist"></script>
        <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
        {{/section}}

        {{#section "scripts"}}
        {{/section}}